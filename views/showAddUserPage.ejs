<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Registration</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/main.css">

    </head>
    <body>
        <header id="header">
            <nav>
                <div class="container">
                    <div class="text-center">
                        <h1>Covid-19 Vaccine User Signup </h1>
                    </div>
                </div>
            </nav>
        </header>
       <section data-position="songs"></section>
         <!-- form handling -->
 <form method="post" action="/add" name="Form"  id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="text" name="firstName"  value="" placeholder=" Enter Your First Name " required>
        </div>
        <div class="form-group">
            <label for="LName" class="text-light">Last Name</label>
            <input type="text" name="lastName" value="" placeholder=" Enter Your Last Name " required>
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com" required  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
        </div>
       
        <div class="form-group">
            <label for="Adress" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Enter Your Adress" required>
        </div>
        <div class="form-group">
            <label for="phNo" class="text-light">Phone Number</label>
            <input type="tel" name="phNo" value="" placeholder="Enter Your Phone Number" required minlength="10" maxlength="10">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light" >Gender </label>
            <div class="radio inline">
                <input type="radio" required id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" required id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="Allergic" class="text-light">Alergy</label>
            <div class="radio inline">
                <input type="radio" required id="radio-4" name="status" value="Yes" >
                <label for="radio-4"  class="radio-label">Yes</label>
            </div>
            <div class="radio inline">
                <input type="radio" required id="radio-5" name="status" value="No" >
                <label for="radio-5" class="radio-label">No</label>
            </div>
            <div class="form-group">
                <label for="userName" class="text-light">User Name</label>
                <input type="text" name="userName" value="" placeholder=" Enter Your User Name " required>
            </div>
            <div class="form-group">
                <label for="pswd" class="text-light">Password</label>
                <input type="password" name="pswd" value="" placeholder=" Enter Your pasword " required  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">
            </div>
        </div>
        <div class="form-group">
            <button type="onsubmit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
    </body>    
</html>